    function analyzeJob() {

      const selectedJob = document.getElementById("jobSelect").value;

      const job = jobs.find((j) => j.title === selectedJob);



      if (job) {

        // Display job analysis

        const jobAnalysis = `

          <div class="card">

            <h3>${job.title}</h3>

            <p>${job.description}</p>

            <p>Risk Percentage: ${job.riskPercentage}% (${job.riskDescription})</p>

            <p>Demand: ${job.demand}</p>

            <canvas id="demandTrendChart"></canvas>

          </div>

        `;

        document.getElementById("jobAnalysis").innerHTML = jobAnalysis;



        // Create demand trend chart

        const ctx = document.getElementById("demandTrendChart").getContext("2d");

        new Chart(ctx, {

          type: "line",

          data: {

            labels: ["2018", "2019", "2020", "2021", "2022"],

            datasets: [

              {

                label: "Demand Trend",

                data: job.demandTrend,

                borderColor: "rgba(75, 192, 192, 1)",

                backgroundColor: "rgba(75, 192, 192, 0.2)",

                fill: true,

              },

            ],

          },

          options: {

            responsive: true,

            plugins: {

              legend: {

                display: true,

                position: "top",

              },

            },

          },

        });

      } else {

        // Show error message

        document.getElementById("jobAnalysis").innerHTML =

          "<p>Please select a valid job title.</p>";

